{{#if articles}}
 <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="modala">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      {{articles.length}} Articles Fetched!
    </div>
  </div>
</div>
</div>
  {{#each articles}}
    <div class="card" style="width: 100%;">
        <div class="card-header"><a href="{{this.link}}" target="_blank">{{this.title}}</a><div class="savebtn">  <button type= "submit" class="btn btn-primary btnsave" id="{{this.newsid}}" title="{{this.title}}" link ="{{this.link}}" snipe = "{{this.snipe}}">SAVE ARTICLE</button></div></div>
      <div class="card-body">
      <p class="card-text">{{this.snipe}}</p>
    </div>
   </div>
  {{/each}}
 {{else}}
     <div class="alert alert-info">
       <div class="container-fluid">
         <div class="alert-icon">
         </div>
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true"><i class="material-icons">X</i></span>
        </button>
           <b>Info Alert: We don't have any new articles at the moment.</b>
       </div>
    </div>   
{{/if}}   

